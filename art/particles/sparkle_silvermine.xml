<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/sparkle_silver.png</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="10.0"/>
    <uniform name="lifetime" min="1.0" max="4.0"/>

    <uniform name="position.x" min="-7.0" max="7.0"/>
    <uniform name="position.z" min="-7.0" max="7.0"/>
    <uniform name="position.y" min="0.5" max="2.0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-1.0" max="1.0"/>
    <uniform name="velocity.y" min="0.5" max="1.5"/>
    <uniform name="velocity.z" min="-1.0" max="1.0"/>
    <uniform name="velocity.angle" min="-3.14" max="3.14"/>

    <uniform name="size" min="0.5" max="1.5"/>

    <uniform name="color.r" min="0.7" max="0.8"/>
    <uniform name="color.g" min="0.7" max="0.8"/>
    <uniform name="color.b" min="0.7" max="0.8"/>

    <force y="0.25"/>

</particles>
